---
interface Props {
  text: string;
  type: 'button' | 'link';
  className: string;
  url?: string;
}

const { text, type, className, url = '#' } = Astro.props;
---

{
  type === 'link' ? (
    <a href={url} class={className}>
      {text}
    </a>
  ) : (
    <button class={className}>{text}</button>
  )
}

<style lang="scss">
  .btn {
    border: none;
    padding: 1.3rem 2.5rem;
    border-radius: 10rem;
    background-color: var(--color-light-3);
    font-family: inherit;
    color: var(--color-gray);
    font-size: 1.6rem;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;

    display: inline-block;

    &:hover {
      background-color: var(--color-light-2);
      //box-shadow: 0 0.1rem 0.2rem rgba(#000, 0.2);
    }

    &:link {
      text-decoration: none;
    }

    &--primary {
      background-color: var(--color-primary);
      color: white;

      &:hover {
        background-color: var(--color-primary-darker);
      }
    }

    &--gradient {
      background-image: linear-gradient(
        to right bottom,
        var(--color-primary),
        var(--color-secondary)
      );
      color: white;
    }
  }
</style>
