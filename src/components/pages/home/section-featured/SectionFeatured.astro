---
import RecentBlogs from './RecentBlogs.astro';
import FeaturedTopics from './FeaturedTopics.astro';
import PopularTags from './PopularTags.astro';
---

<section class="section-featured">
  <div class="section-featured__inner-box u-container">
    <div class="section-featured__left">
      <RecentBlogs />
    </div>
    <div class="section-featured__right">
      <FeaturedTopics />
      <PopularTags />
    </div>
  </div>
</section>

<style lang="scss" is:global>
  @use '@styles/mixins' as *;

  .section-featured {
    width: 100%;
    padding: 8rem 0;
    background-color: var(--background-color);

    @include respond(tab-land) {
      padding: 8rem 2rem;
    }

    @include respond(phone) {
      padding: 4rem 2rem;
    }

    &__inner-box {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    &__left {
      width: 65rem;

      @include respond(tab-land) {
        width: 100%;
      }
    }

    &__right {
      width: 36rem;

      @include respond(tab-land) {
        margin-top: 7rem;
        width: 100%;
      }

      & > *:not(:last-child) {
        margin-bottom: 7rem;
      }
    }
  }

  .theme-dark {
    .section-featured {
      background-color: var(--color-dark);
    }
  }
</style>
